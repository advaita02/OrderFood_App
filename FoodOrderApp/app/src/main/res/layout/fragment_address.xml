<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_address.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#CAC9C9"
    android:id="@+id/fragment_address_pickup">



    <!-- You can add more TextViews for additional address details like country, etc. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/backprevous"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/icon_back" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_marginStart="12sp"
                >
            <ImageView
                android:id="@+id/location"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/placeholder"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Vận chuyển đến"
                android:inputType="text"
                android:maxLines="1"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save places"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_margin="12sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30sp">

            <ImageView
                android:id="@+id/add_home_adress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_home"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/text_home_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add home"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="15sp"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30sp">

            <ImageView
                android:id="@+id/add_work_address"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_work"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/text_work_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add work"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="15sp"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30sp">

            <ImageView
                android:id="@+id/add_new_place"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_plus"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/text_new_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add new"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="15sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/add_by_gg_map"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_map"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/text_gg_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn từ bản đồ"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="15sp"
            android:textColor="@color/black"/>

    </LinearLayout>
</LinearLayout>
