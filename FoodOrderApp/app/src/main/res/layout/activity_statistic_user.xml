<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.StatisticActivity.ActivityStatisticUser">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      tools:ignore="MissingConstraints">
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="THỐNG KÊ THEO USER"
        android:textColor="@color/black"
        android:textSize="25dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="37dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Nhập id user mà bạn cần tìm:"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/edit_user_statistic"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_margin="20dp"
        android:hint="Nhập id ở đây" />

    <Button
        android:id="@+id/btn_statistic_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bắt đầu thống kê"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Kết quả: "
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="60dp"
        android:layout_margin="20dp"
        android:id="@+id/list_user_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_yellow"/>
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>